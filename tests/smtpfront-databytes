DATABYTES=123

sfecho <<EOF
EHLO hostname
MAIL FROM:<somebody>
MAIL FROM:<somebody> SIZE
MAIL FROM:<somebody> SIZE=
MAIL FROM:<somebody> SIZE=100
MAIL FROM:<somebody> SIZE=123
MAIL FROM:<somebody> SIZE=124
RCPT TO:<nobody@nowhere>
EOF
<result>
