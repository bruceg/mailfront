cat >$tmp/patterns <<EOF
# comment
/before
# comment
EOF

PATTERNS=$tmp/patterns sfecho <<EOF
MAIL FROM:<>
RCPT TO:<nobody>
DATA
before

after
.
EOF

rm -f $tmp/patterns
