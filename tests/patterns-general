<loop subject "xwordx" "word at the beginning" "last word" "middle word middle" "word" "xord">
cat >$tmp/patterns <<EOF
/Subject: *word*
EOF

PATTERNS=$tmp/patterns sfecho <<EOF
MAIL FROM:<>
RCPT TO:<nobody>
DATA
Subject: $subject
.
EOF

rm -f $tmp/patterns

<result "xwordx">
