setup_cert
make_stunnel_conf 'smtp echo accept' 'protocol = smtp'
cat $certfile $keyfile > $tmp/tlsboth.pem
env TLS_CERTFILE=$tmp/tlsboth.pem \
stunnel $tmp/stunnel.conf < /dev/null 2>&1 | fixtls
rm -f $tmp/tlsboth.pem

